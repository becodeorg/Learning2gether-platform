{% extends 'base.html.twig' %}

{% block title %}Hello ProfileController!{% endblock %}

{% block body %}
<div class="example-wrapper">
    <div class="row">
        <div class="col-md-8">
            {# default mode #}
            <div class="profileimgwrap">
                <div class="profileimg profileimgwrap">
                    {% if user.avatar %}
                        <img src="{{ asset('upload/' ~ user.avatar) }}" alt="avatar of {{ user.name }}">
                    {% else %}
                        <img src="{{ asset('assets/img/logo_transparent.png') }}" alt="avatar of {{ user.name }}">
                    {% endif %}
                </div>
                <div class="profiletext">
                    <p>{{ user.username }}</p>
                    <p>{{ user.name }}</p>
                    <p>{{ user.email }}</p>
                    <div id="imagebutton">Edit Profile</div>
                </div>
            </div>
            {# edit mode : only if "edit-btn" is clicked #}
            <div class="profileimgwrap gone" id="show">
                <div class="profileimg profileimgwrap" id="changeavatar">
                    {{ form_start(profileForm) }}
{#                    <div class="gone" id="show">#}
                    {{ form_row(profileForm.avatar) }}
{#                    </div>#}
                </div>
                <div class="profiletext">
                    {{ form_row(profileForm.username) }}
                    {{ form_row(profileForm.name) }}
                    {{ form_row(profileForm.email) }}
                    <button class="button_2 btn">Update Profile</button>
                    {{ form_end(profileForm) }}
                </div>
            </div>

            {# Delete my account#}
            <div>
                {{ form_start(deleteBtn) }}
                {{ form_widget(deleteBtn.delete_user,
                    { 'label': 'Delete my account'
                    , 'attr': {'onclick': 'return confirm("Are you sure to delete your account?")'}
                    }) }}
                {{ form_end(deleteBtn) }}
            </div>

            <div class="progression">
                <h3 class="title">Your courses</h3>
                <p class="coursetitle">Javascript</p>
                    <div class="progress progress_1">
                        <div class="progress-bar progress_1_bar" role="progressbar" id="moduleprogress" aria-valuenow="25"
                             aria-valuemin="0" aria-valuemax="100">25%
                        </div>
                    </div>
                <button class="completebutton button_2">Complete</button>
            </div>

        </div>
